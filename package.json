{
  "name": "electron-vue-tpl",
  "version": "1.0.0",
  "description": "Electron + Vue3 + Ant Design + UnoCSS + SQLite development template",
  "main": "dist/electron/main.js",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "缪克拉",
    "email": "2972799448@qq.com"
  },
  "keywords": [
    "electron",
    "vue3",
    "ant-design",
    "unocss",
    "sqlite",
    "template"
  ],
  "build": {
    "mac": {
      "icon": "electron/logo.icns"
    },
    "win": {
      "icon": "electron/logo.png"
    },
    "linux": {
      "icon": "electron/logo.png"
    },
    "files": [
      "dist/electron/**/*",
      "dist/renderer/**/*",
      "electron/logo.png",
      "package.json",
      "electron/logo.icns"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "directories": {
      "buildResources": "build"
    },
    "asar": {
      "smartUnpack": false
    },
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "scripts": {
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.main.json && tsc -p electron/tsconfig.preload.json",
    "build:icons": "node scripts/build-icons.cjs",
    "convert:icons": "node scripts/convert-svg-to-png.cjs",
    "select:icon": "node scripts/select-icon.cjs",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn build:electron && yarn dev:renderer\" \"node scripts/wait-and-start-electron.cjs\"",
    "build": "cross-env NODE_ENV=production yarn build:renderer && yarn build:electron && electron-builder"
  },
  "dependencies": {
    "ant-design-vue": "^4.2.6",
    "electron-log": "^5.4.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vue": "3"
  },
  "devDependencies": {
    "@types/sqlite3": "^5.1.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^8.2.2",
    "cross-env": "7.0.3",
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "sass": "^1.77.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "unocss": "^0.61.9",
    "vite": "^4.5.5"
  }
}